<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ninjago"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marmm.ninjagospeurtocht.MainActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonVorige"
        android:id="@+id/radioGroup"
        android:background="#f2ffdd"
        android:layout_alignStart="@+id/buttonVorige">

        <RadioButton
            android:text="RadioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton1" />

        <RadioButton
            android:text="RadioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2" />

        <RadioButton
            android:text="RadioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3" />


    </RadioGroup>

    <Button
        android:text="Volgende"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonVolgende"
        android:layout_marginStart="58dp"
        android:layout_marginBottom="47dp"
        android:onClick="onclickVolgende"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonVorige" />

    <Button
        android:text="Vorige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:id="@+id/buttonVorige"
        android:onClick="onclickVorige"
        android:layout_alignBaseline="@+id/buttonVolgende"
        android:layout_alignBottom="@+id/buttonVolgende"
        android:layout_alignParentStart="true" />


</RelativeLayout>
